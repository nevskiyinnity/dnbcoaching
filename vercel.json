{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "installCommand": "npm ci",
  "buildCommand": "npm ci && npm run build",
  "functions": {
    "api/*.ts": {
      "runtime": "nodejs20.x"
    }
  },
  "rewrites": [
    { "source": "/bot", "destination": "/index.html" },
    { "source": "/bot/", "destination": "/index.html" },
    { "source": "/bot/assets/(.*)", "destination": "/assets/$1" },
    { "source": "/bot/(.*)", "destination": "/index.html" }
  ]
}
